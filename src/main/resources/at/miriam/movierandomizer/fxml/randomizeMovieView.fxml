<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.miriam.movierandomizer.controller.RandomizeMovieController">
   <children>
      <Pane prefHeight="300.0" prefWidth="500.0" stylesheets="@../css/styles.css">
         <children>
            <Label layoutX="169.0" layoutY="33.0" text="You have to watch this movie: " />

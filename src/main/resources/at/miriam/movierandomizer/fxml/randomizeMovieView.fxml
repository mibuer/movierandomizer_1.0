            </ButtonBar>
            <Label fx:id="showResultLabel" alignment="TOP_CENTER" layoutX="85.0" layoutY="186.0" prefHeight="56.0" prefWidth="342.0" textAlignment="JUSTIFY" />
         </children>
      </Pane>
   </children>
